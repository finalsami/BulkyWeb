@model Category
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for=Name class="p-0">Category Name</label>
            <input asp-for=Name disabled type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for=DisplayOrder class="p-0">Display Order</label>
            <input asp-for=DisplayOrder disabled type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-3">
                <button type="submit" class="btn btn-primary btn-sm form-control">Delete</button>
            </div>
            <div class="col-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-danger form-control btn-sm">Back to List</a>
            </div>
        </div>
    </div>
</form>

