@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for=Name disabled type="text" class="form-control border-0 shadow" />

                    <label asp-for=Name class="ms-2">Category Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=DisplayOrder disabled type="text" class="form-control border-0 shadow" />

                    <label asp-for=DisplayOrder class="ms-2">Display Order</label>
                </div>
                <div class="row">
                    <div class="col-3">
                        <button type="submit" class="btn btn-primary btn-sm form-control">Delete</button>
                    </div>
                    <div class="col-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-light form-control btn-sm">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


